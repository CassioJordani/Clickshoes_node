<!DOCTYPE html>
<html>
<head>
    <title>Lista de Produtos</title>
    <link rel="stylesheet" type="text/css" href="/estilo.css">
</head>
<body class="body-style">
    <div class="container-style">
        <h1 class="title">Lista de Produtos</h1>
        <div class="scrollable-container">
            <table class="course-table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Quantidade</th>
                        <th>Preco</th>
                        <th>Tamanho</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto => { %>
                        <tr>
                            <td><%= produto.nome %></td>
                            <td><%= produto.quantidade %></td>
                            <td>R$ <%= produto.preco %></td>
                            <td><%= produto.tamanho %></td>
                            <td>
                                <a class="edit-link" href="/edit-produto/<%= produto.id %>">Editar</a>
                                <form action="/delete-produto/<%= produto.id %>" method="post" class="delete-form">
                                    <button type="submit" class="delete-button">Deletar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <a href="/add-produto" class="add-link">Adicionar produto</a>
        <a href="/home" class="add-link">Voltar</a>

    </div>
</body>
</html>
